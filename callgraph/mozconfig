. $topsrcdir/browser/config/mozconfig
mk_add_options MOZ_OBJDIR=$OBJDIR
ac_add_options --disable-optimize --disable-debug
ac_add_options --disable-tests

# build with treehydra instead of normal gcc/g++
export CXX="$GCCBIN/g++ -fplugin=$DEHYDRA/gcc_treehydra.so -fplugin-arg-gcc_treehydra-script=$SCRIPT"
export CC="$GCCBIN/gcc -fplugin=$DEHYDRA/gcc_treehydra.so -fplugin-arg-gcc_treehydra-script=$SCRIPT"

